<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/reyes" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="50dp">

            <Button
                android:id="@+id/btnMSSOS"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/fondo_rojo"
                android:lineSpacingExtra="8sp"
                android:onClick="onClick"
                android:text="SOSjk"
                android:textAlignment="inherit"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMSRegistroEmpresa"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/fondo_amarillo"
                        android:backgroundTint="#FFF200"
                        android:onClick="onClick"
                        android:shadowColor="#FFFFFF"
                        android:text="REGISTRO DE EMPRESA
"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/bntMSHistorial"
                        app:layout_constraintEnd_toStartOf="@+id/btnMSCrearPunto"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnMSSOS"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/btnMSCrearPunto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/fondo_naranja"
                        android:onClick="onClick"
                        android:text="CREAR PUNTOS
"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/btnMSNovedades"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnMSSOS"
                        app:layout_constraintVertical_bias="0.333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <Button
                        android:id="@+id/bntMSHistorial"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/fondo_celeste"
                        android:onClick="onClick"
                        android:text="HISTORIAL"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/btnMSNovedades"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/fondo_verde"
                        android:onClick="onClick"
                        android:text="NOVEDADES"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>